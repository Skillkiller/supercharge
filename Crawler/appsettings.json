{
  // Logging configuration
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  // Connection information and credentials for database connections
  "ConnectionStrings": {
    "postgres": "Host=localhost;Database=masterypoints;Username=masterypoints;Password=..."
  },

  // Settings for riot API connection
  "RiotAPI": {
    // The Riot API application token
    // You can use your development API key for testing purposes which you
    // can get here: https://developer.riotgames.com
    // For production, create a product API key here: 
    // https://developer.riotgames.com/app-type
    "Secret": "RGAPI-..."
  },

  // Settings for the API crawler
  "Crawler": {
    "MaxRequestsPerSecond": 100,
    // Here you can specify lists of times when the crawler
    // should perform which action on a daily basis.
    // For example GetStatus each 2 hours and GetLog
    // only at 3 AM.
    "ExecOn": {
      "GetStatus": [
        "00:00",
        "02:00",
        "04:00",
        "06:00",
        "08:00",
        "10:00",
        "12:00",
        "14:00",
        "16:00",
        "18:00",
        "20:00",
        "22:00"
      ],
      "GetLog": [
        "03:00"
      ]
    }
  }
}
